{
  "name": "ink-verifier-server",
  "version": "1.0.0",
  "description": "Ink! Verification Server",
  "main": "start.js",
  "scripts": {
    "start:dev": "nodemon",
    "start": "npm run build && node build/start.js",
    "build": "rimraf ./build && npx tsc",
    "lint": "eslint . --ext .ts --fix",
    "test": "jest --verbose --maxWorkers=1",
    "test:coverage": "npm test -- --coverage --collectCoverageFrom='src/**/*.ts'"
  },
  "author": "OM Team",
  "license": "Apache-2.0",
  "dependencies": {
    "@fastify/cors": "^8.2.0",
    "@fastify/multipart": "^7.3.0",
    "@fastify/swagger": "^8.1.0",
    "@fastify/under-pressure": "^8.1.0",
    "@fastify/websocket": "^7.1.1",
    "@polkadot/api": "^9.9.1",
    "@polkadot/apps-config": "^0.121.1",
    "@polkadot/types": "^9.9.1",
    "dotenv": "^16.0.3",
    "fastify": "^4.10.2",
    "form-data": "^4.0.0",
    "sanitize-filename": "^1.6.3"
  },
  "overrides": {
    "@polkadot/apps-config": {
      "@polkadot/api": "$@polkadot/api",
      "@polkadot/types": "$@polkadot/types"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "^8.28.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "pino-pretty": "^9.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
