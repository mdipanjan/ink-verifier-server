{
  "compilerOptions": {
    "target": "ES2022",
    "rootDirs": ["src/", "config/"],
    "outDir": "build/",
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "Node16",
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "**/*.ts"
  ]
}
